{% extends "template/template.twig" %}
{% block styles %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.10.16/datatables.min.css"/>
    <link rel="stylesheet" href="{{ base_url }}/monitor/public/css/modules/uploaduser.css">
{% endblock %}
{% block content %}
    <div class="ed-container full">
        <div class="ed-item s-100 l-100 padding-2-em-botom">
            <div class="separator"></div>
            <h2>Análisis del anexo11 para desmatricular usuarios</h2>
        </div>
        <div class="ed-item s-100">
            <a href="{{ path_for('admin.register') }}" class="btn btn-info"> <i class="fa fa-angle-left	"></i> Volver</a>
        </div>
        <div class="separator"></div>
        <div class="ed-item s-100">
            <p>
                Esta aplicación, permitirá analizar un archivo <a download
                                                                  href="{{ path_for('admin.register.archive.anexo') }}">Anexo
                    11</a>
            </p>
            <br>
            <form action="{{ path_for('admin.view.student.upload.deenroll') }}" enctype="multipart/form-data"
                  method="post"
                  id="formFile">
                <input type="file" name="archive" required
                       accept=".csv, application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel">
                <button class="btn btn-primary">Analizar</button>
            </form>
        </div>
        <div class="ed-item s-100 none" id="content-result">
            <br>
            <p class="tools-p">Registros: <span data-toggle='tooltip' title='Matriculas'
                                                            id="registros"></span>
                - Correctos: <span id="totalR"></span> - Errores: <span id="totalE"></span> -
                <button data-toggle='tooltip' title='Descargar registros de la tabla'
                        class="btn none fadein download-data btn-info">Descargar
                </button>
                -
                <button data-toggle='tooltip' title='Archivar usuarios correctos' id="cargar" class="btn btn-success"
                        data-action="{{ path_for('admin.register.archive.proccess') }}">Procesar resultados
                </button>
            </p>
            <br>
            <table id="tableResult">
                <thead>
                <tr>
                    <th></th>
                    <th> {{ "Curso" | title }}</th>
                    <th> {{ "Usuario" | title }}</th>
                    <th> {{ "Codigo" | title }}</th>
                    <th> {{ "Mensaje" | title }}</th>
                </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>

    </div>

{% endblock %}
{% block scripts %}
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.16/datatables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.5.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.5.2/js/buttons.print.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.5.2/js/buttons.flash.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.5.2/js/buttons.html5.min.js"></script>
    <script src="{{ base_url }}/monitor_iupb/public/js/function.js"></script>
    <script src="{{ base_url }}/monitor_iupb/public/js/modules/upload_register_enroll.js"></script>
{% endblock %}